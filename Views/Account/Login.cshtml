@{
    ViewData["Title"] = "User Login";
}

<!-- Bootstrap 5 Login Form -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h3 class="text-center text-primary"><i class="bi bi-person-circle"></i> User Login</h3>
        <hr>
        
        <form method="post" asp-action="Login" asp-controller="Account">
            <!-- Email -->
            <div class="form-group mb-3">
                <label for="email"><i class="bi bi-envelope-fill"></i> Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="password"><i class="bi bi-lock-fill"></i> Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </button>

            <!-- Register Link -->
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Don't have an account? Register here</a>
            </div>
        </form>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
